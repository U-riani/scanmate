<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZebraSCannerTest1.UI.Views.InventoryMenuPage"
             Title="Inventory Menu">

    <VerticalStackLayout Padding="30" Spacing="25"
                         VerticalOptions="Center" HorizontalOptions="Center">

        <Button Text="LOOTS"
                FontSize="20"
                BackgroundColor="#FFC107"
                TextColor="Black"
                WidthRequest="200"
                HeightRequest="60"
                Clicked="OnLootsClicked"/>

        <Button Text="BARCODES"
                FontSize="20"
                BackgroundColor="#0078D7"
                TextColor="White"
                WidthRequest="200"
                HeightRequest="60"
                Clicked="OnBarcodesClicked"/>

        <Button Text="COMBOS"
         FontSize="20"
         BackgroundColor="#0078D7"
         TextColor="White"
         WidthRequest="200"
         HeightRequest="60"
         Clicked="OnCombosClicked"/>


    </VerticalStackLayout>
</ContentPage>
