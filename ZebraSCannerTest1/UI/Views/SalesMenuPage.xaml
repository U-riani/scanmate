<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZebraSCannerTest1.UI.Views.SalesMenuPage"
             xmlns:viewModel="clr-namespace:ZebraSCannerTest1.UI.ViewModels"
             Title="SalesMenuPage">
    <FlexLayout Direction="Column" AlignItems="Center" JustifyContent="Center" x:DataType="viewModel:SalesMenuViewModel">
        <Button Text="Continue"
            FontSize="20"
            BackgroundColor="MediumSeaGreen"
            TextColor="Black"
            WidthRequest="200"
            HeightRequest="60"
            Margin="0,0,0,10"
            Command="{Binding NavigateToSalesPageCommand}"/>
        <Button Text="Import"
            FontSize="20"
            BackgroundColor="#FFC107"
            TextColor="Black"
            WidthRequest="200"
            HeightRequest="60"
            Margin="0,10,0,0"
            Command="{Binding OnImportSalesDataCommand}"/>
    </FlexLayout>
</ContentPage>