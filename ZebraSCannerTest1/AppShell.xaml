<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ZebraSCannerTest1.UI.Views"
    x:Class="ZebraSCannerTest1.AppShell"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="True"
    Shell.BackgroundColor="#0026B7"
    Shell.TitleColor="White"
    Shell.NavBarHasShadow="False">

    
    <!-- Global Toolbar Item (hamburger menu) -->
    <Shell.ToolbarItems>
        <ToolbarItem IconImageSource="menu.png"
                 Order="Primary"
                 Priority="0"
                 Command="{Binding ToggleFlyoutCommand}" />
    </Shell.ToolbarItems>


    <!-- Global TitleView with logo + title -->
    <Shell.TitleView>
        <HorizontalStackLayout Spacing="8" VerticalOptions="Center" HorizontalOptions="Center">
            <Image Source="logo2.png" HeightRequest="28" WidthRequest="28" />
            <Label 
                Text="ScanMate"
                FontAttributes="Bold"
                FontSize="18"
                VerticalOptions="Center"
                TextColor="White" />
        </HorizontalStackLayout>
    </Shell.TitleView>

    <!-- Main navigation area -->
    <TabBar>
        <ShellContent
            Title="Home"
            Icon="home.svg"
            ContentTemplate="{DataTemplate views:HomePage}" />
    </TabBar>

</Shell>
